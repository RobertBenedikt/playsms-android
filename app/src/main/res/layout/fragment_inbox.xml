<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultLayout"
    tools:context="com.artivisi.android.playsms.ui.fragment.InboxFragment">
    <LinearLayout style="@style/LayoutVertical">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_list_inbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView style="@style/MessageListView"
                android:id="@+id/list_inbox"
                android:visibility="gone"/>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <TextView style="@style/Banner"
        android:text="Prázdný"
        android:layout_gravity="center"
        android:id="@+id/inbox_empty" />

</FrameLayout>
